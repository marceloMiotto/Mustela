<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/card_padding"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/measure_item_line_space"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:id="@+id/textView_measure_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/measure_date"
            android:textAlignment="textStart"
            tools:text="test"
            android:layout_weight="1"
            android:gravity="center|start"

            />


        <TextView
            android:id="@+id/textView_measure_weight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="@string/measure_weight"
            android:textAlignment="textStart"
            tools:text="test"
            android:layout_weight="1"
            android:gravity="center|start"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/measure_item_line_space"
            tools:ignore="Suspicious0dp" />
        <TextView
            android:id="@+id/textView_measure_percentage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/measure_percentage"
            android:textAlignment="textStart"
            android:layout_weight="2"
            android:gravity="center|start"

            tools:text="test" />

        <ImageButton
            android:id="@+id/imageButton_measure_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start"
            android:src="@drawable/delete"
            android:background="@drawable/round_border"
            android:onClick="onClick"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>


</LinearLayout>

